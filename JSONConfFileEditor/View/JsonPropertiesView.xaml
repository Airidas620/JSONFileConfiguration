<UserControl x:Class="JSONConfFileEditor.View.JsonPropertiesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:s="http://schemas.abtsoftware.co.uk/scichart"
             xmlns:local="clr-namespace:JSONConfFileEditor.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="#f5ecd3">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <StackPanel Orientation="Vertical" CanVerticallyScroll="True" CanHorizontallyScroll="True" >

                <TextBlock Text="Boolean values" HorizontalAlignment="Center" FontSize="18"/>

                <!-- Boolean -->
                <ItemsControl ItemsSource="{Binding BoolCollection}" Margin="0,10,0,0" >
                    
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Rows="{Binding BoolCollectionLength}" Columns="2"  />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <CheckBox Margin="0,0,5,5" HorizontalAlignment="Center" IsChecked="{Binding IsChecked}">
                                <TextBlock Text="{Binding Title}" TextWrapping="Wrap" ></TextBlock>
                            </CheckBox>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <TextBlock Text="Double values" HorizontalAlignment="Center" FontSize="18"/>

                <!-- double -->
                <ItemsControl ItemsSource="{Binding DoubleCollection}" Margin="0,10,0,0">
                    
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Rows="{Binding DoubleCollectionLength}" Columns="2" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" >
                                <TextBlock Text="{Binding Title}" />
                                <TextBox MaxWidth="150" MinWidth="70" PreviewTextInput="NumberValidationTextBox" Margin="5,0,0,0" Text="{Binding DoubleValue}"/>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <TextBlock Text="String values" HorizontalAlignment="Center" FontSize="18"/>

                <!-- string -->
                <ItemsControl ItemsSource="{Binding StringCollection}" Margin="0,10,0,0">
                    
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Rows="{Binding StringCollectionLength}" Columns="2" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" >
                                <TextBlock Text="{Binding Title}"/>
                                <TextBox MaxWidth="150" MinWidth="70" Margin="5,0,0,0" Text="{Binding StringValue}"/>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <TextBlock Text="Enum values" HorizontalAlignment="Center" FontSize="18"/>

                <!-- Enums -->
                <ItemsControl ItemsSource="{Binding EnumCollection}" Margin="0,10,0,0">
                    
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Rows="{Binding EnumCollectionLength}" Columns="2" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="0,5,0,5" HorizontalAlignment="Center">
                                <TextBlock Text="{Binding Title}"/>
                                <ComboBox  MinWidth="70" ItemsSource="{Binding ComboBoxValues}" Margin="5,0,0,0" SelectedItem="{Binding ComboBoxValue}" />
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
