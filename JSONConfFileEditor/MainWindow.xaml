<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JSONConfFileEditor"
        xmlns:view="clr-namespace:JSONConfFileEditor.View"
        x:Class="JSONConfFileEditor.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        MinHeight="350" MinWidth="600"
        >
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="9*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <view:JsonPropertiesView DataContext="{Binding JSONConfigurationEditor}"/>
        </Grid>

        <Grid Grid.Row="1">
            <Button Command="{Binding SaveConfigurationCommand}" MinWidth="80" MaxHeight="50" Margin="50,5,0,5" Content="Save JSON" HorizontalAlignment="Left" BorderBrush="#FF4A4949" Background="#FFC4E0C1" />
        </Grid>

    </Grid>
</Window>
